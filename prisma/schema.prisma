// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  logo          String   @default("üè¢")
  color         String   @default("#888888")
  industry      String
  description   String
  website       String   @default("")
  // Storing arrays as JSON strings
  languages     String
  frameworks    String
  skills        String
  qualities     String   @default("[]")
  experience    String   @default("See description")
  contributions String   @default("")
  lookingFor    String   @default("")
  careerPageUrl String?
  
  // Enriched Data
  compensation  String?  @default("")
  benefits      String?  @default("") // Markdown or JSON
  locations     String?  @default("[]") // JSON string of cities
  roleTypes     String?  @default("[]") // JSON string of roles
}

model UserMatch {
  id          Int      @id @default(autoincrement())
  username    String
  companyName String
  score       Float
  createdAt   DateTime @default(now())
}

// User model is unused but kept for schema consistency if needed.
// It does not store portfolio or sensitive data.
model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  githubHandle  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
